{{> header}}
<div class="container">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Posted by {{username}} on {{format_date createdAt}}</p>
  <div class="comments">
    {{#each comments}}
    <div class="comment">
      <p>{{comment_text}}</p>
      <p>Commented by {{username}} on {{format_date createdAt}}</p>
    </div>
    {{/each}}
  </div>
  <form id="new-comment-form">
    <div class="mb-3">
      <label for="comment-text" class="form-label">Comment:</label>
      <textarea id="comment-text" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add Comment</button>
  </form>
</div>
{{> footer}}